{% block stylesheets %}
<style>
    .bg-custom {
        background: linear-gradient(to bottom, #ffffff, #f0f0f0);
    }
    .footer a {
        color: black;
        transition: color 0.3s;
    }
    .footer a:hover {
        color: black;
    }
    .social-icons a {
        font-size: 1.5rem;
        transition: transform 0.3s;
    }
    .social-icons a:hover {
        transform: scale(1.2);
    }

    .fire-effect {
        position: relative;
        height: 100px; /* Adjust height as needed */
        overflow: hidden;
        background: #333; /* Dark background to contrast with flames */
    }

    .flame-svg {
        position: absolute;
        bottom: 0;
        left: 50%;
        width: 200%; /* Extend width to cover the area */
        height: auto;
        transform: translateX(-50%);
        animation: flicker 1s infinite alternate, sway 2s infinite ease-in-out;
    }

    @keyframes flicker {
        0% {
            opacity: 1;
            transform: translateY(0);
        }
        100% {
            opacity: 0.6;
            transform: translateY(-10px);
        }
    }

    @keyframes sway {
        0% {
            transform: translateX(-50%) rotate(-10deg);
        }
        50% {
            transform: translateX(-50%) rotate(10deg);
        }
        100% {
            transform: translateX(-50%) rotate(-10deg);
        }
    }
</style>
{% endblock %}
